extends layout 

block content 
	h1(class='form-heading')=`Edit ${category.name}`
	form(method='POST', action=`/category/${category.nameLower}/edit`, class='form')
		input(type='text', placeholder='Name' class='form__input', name='name', value=`${category.name}`, required)
		input(type='text', placeholder='Description', class='form__input', name='description', value=`${category.description}`, required)
		input(type='submit', value='Edit Category', class='form__submit')