doctype html
html
  head
    title Inventory
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    div(class='container-grid')
      div(class='sidebar')
        div(class='sidebar-heading') 
          i(class='sidebar-icon fas fa-warehouse')
          h1(class='sidebar-heading__text') Inventory
        ul(class='sidebar-list')
          each category in categoryList
            li(class='sidebar-item')
              a(class='sidebar-link', href=`${category.url}`)=category.name 


        
        ul(class='sidebar-list')
          li(class='sidebar-item')
            i(class='sidebar-icon fas fa-plus-circle')
            a(class='sidebar-link add', href='add-category') Add Category

          li(class='sidebar-item')
            i(class='sidebar-icon fas fa-plus-circle')
            a(class='sidebar-link add', href='add-product') Add Product



      div(class='main')
        block content
