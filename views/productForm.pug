extends layout 

block content
	if category
		h1(class='form-heading')=`Add product to ${category.name}`
		form(method='POST', action=`/category/${category.nameLower}/add`, class='form', id='form')
			input(type='text', placeholder='Name' class='form__input', name='name', required)
			input(type='text', placeholder='Description', class='form__input', name='description', required)
			input(type='number', placeholder='Price', class='form__input', name='price', step="0.01", required)
			input(type='number', placeholder='Stock', class='form__input', name='stock', min='0', required)
			input(type='submit', value='Add Product', class='form__submit')
	else
		h1(class='form-heading') Add new product
		form(method='POST', action='/add-product', class='form', id='form')
			select(form='form', name='category', required)
				option(value='', disabled, selected) Select a category
				each category in categoryList
					option(value=category._id)= category.name

			input(type='text', placeholder='Name' class='form__input', name='name', required)
			input(type='text', placeholder='Description', class='form__input', name='description', required)
			input(type='number', placeholder='Price', class='form__input', name='price', step="0.01", required)
			input(type='number', placeholder='Stock', class='form__input', name='stock', min='0', required)
			input(type='submit', value='Add Product', class='form__submit')